<?xml version="1.0" encoding="utf-8"?>
<!-- textview_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_blue" /> <!-- Color de fondo del TextView -->
            <corners android:radius="5dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fondo transparente para el borde -->
            <stroke
                android:width="2dp"
                android:color="@color/light_blue" />
            <corners android:radius="5dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>
</layer-list>